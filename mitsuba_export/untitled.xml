<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

	<default name="spp" value="4"/>
	<default name="resx" value="1920"/>
	<default name="resy" value="1080"/>

<!-- Camera and Rendering Parameters -->

	<integrator type="path" id="elm__0" name="elm__0">
		<integer name="max_depth" value="-1"/>
		<integer name="rr_depth" value="5"/>
		<boolean name="hide_emitters" value="false"/>
	</integrator>
	<sensor type="perspective" id="Camera" name="Camera">
		<string name="fov_axis" value="x"/>
		<float name="fov" value="39.597755"/>
		<float name="principal_point_offset_x" value="0.000000"/>
		<float name="principal_point_offset_y" value="-0.000000"/>
		<float name="near_clip" value="0.100000"/>
		<float name="far_clip" value="100.000000"/>
		<transform name="to_world">
			<rotate x="1" angle="116.44070980054053"/>
			<rotate y="1" angle="5.419622430558914e-06"/>
			<rotate z="1" angle="-133.30805320118378"/>
			<translate value="7.358891 -6.925791 4.958309"/>
		</transform>
		<sampler type="independent" name="sampler">
			<integer name="sample_count" value="$spp"/>
			<integer name="seed" value="0"/>
		</sampler>
		<film type="hdrfilm" name="film">
			<integer name="width" value="$resx"/>
			<integer name="height" value="$resy"/>
			<rfilter type="box" name="rfilter"/>
		</film>
	</sensor>

<!-- Materials -->

	<bsdf type="twosided" id="mat-itu_concrete" name="mat-itu_concrete">
		<bsdf type="diffuse" name="bsdf">
			<rgb value="0.237326 0.295693 0.287148" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="diffuse" id="mat-itu_plasterboard" name="mat-itu_plasterboard">
		<rgb value="0.868736 1.000380 0.374685" name="reflectance"/>
	</bsdf>
	<bsdf type="diffuse" id="mat-itu_brick" name="mat-itu_brick">
		<rgb value="0.083321 0.020285 0.009938" name="reflectance"/>
	</bsdf>

<!-- Emitters -->

	<emitter type="constant" id="World" name="World">
		<rgb value="0.900000 0.900000 0.900000" name="radiance"/>
	</emitter>
	<emitter type="point" id="emit-Light" name="emit-Light">
		<point name="position" x="4.076245307922363" y="1.0054539442062378" z="5.903861999511719"/>
		<rgb value="79.577469 79.577469 79.577469" name="intensity"/>
	</emitter>

<!-- Shapes -->

	<shape type="ply" id="mesh-Plane" name="mesh-Plane">
		<string name="filename" value="meshes/Plane.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_concrete" name="bsdf"/>
	</shape>
	<shape type="ply" id="mesh-map_15_osm_buildings-itu_plasterboard" name="mesh-map_15_osm_buildings-itu_plasterboard">
		<string name="filename" value="meshes/map_15_osm_buildings-itu_plasterboard.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_plasterboard" name="bsdf"/>
	</shape>
	<shape type="ply" id="mesh-map_15_osm_buildings-itu_brick" name="mesh-map_15_osm_buildings-itu_brick">
		<string name="filename" value="meshes/map_15_osm_buildings-itu_brick.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_brick" name="bsdf"/>
	</shape>

<!-- Volumes -->

</scene>
